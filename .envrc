FIND_CUDA="$(find /usr/local -regex '.+/cuda-[0-9]+\.[0-9]+$')"
if [ ! -z $FIND_CUDA ]; then
    export CUDA_PATH="$FIND_CUDA"
else
    export CUDA_PATH="$PWD/cuda"
fi

git config blame.ignoreRevsFile .git-blame-ignore-revs
use flake
